rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - allow authenticated users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read, write: if request.auth != null; // Allow any authenticated user for admin purposes
    }
    
    // Projects collection
    match /projects/{document} {
      allow read: if true; // Public read access
      allow write, delete: if request.auth != null; // Authenticated write access
    }
    
    // Services collection
    match /services/{document} {
      allow read: if true; // Public read access
      allow write, delete: if request.auth != null; // Authenticated write access
    }
    
    // Staff collection
    match /staff/{document} {
      allow read: if true; // Public read access
      allow write, delete: if request.auth != null; // Authenticated write access
    }
    
    // Vacancies collection
    match /vacancies/{document} {
      allow read: if true; // Public read access
      allow write, delete: if request.auth != null; // Authenticated write access
    }
  }
}